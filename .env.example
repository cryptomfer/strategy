###############################################
# Local environment (copy to .env and edit)
###############################################

# Alchemy/Infura or any RPC (HTTPS)
# e.g. https://eth-mainnet.g.alchemy.com/v2/xxxxxxxx
RPC_URL_ETHEREUM=<your_alchemy_rpc_here>
# e.g. https://base-mainnet.g.alchemy.com/v2/xxxxxxxx
RPC_URL_BASE=<your_alchemy_rpc_here>

# Optional: pin fork blocks for stability in forked tests
# FORK_BLOCK_ETHEREUM=20900000
# FORK_BLOCK_BASE=22000000

# Uniswap v4 deployments (fill from docs)
# See: https://docs.uniswap.org/contracts/v4/deployments
# Ethereum mainnet
POOL_MANAGER_ETHEREUM=<pool_manager_address>
POSITION_MANAGER_ETHEREUM=<position_manager_address>
ROUTER_ETHEREUM=<router_address>
PERMIT2_ETHEREUM=<permit2_address>

# Base mainnet
POOL_MANAGER_BASE=<pool_manager_address>
POSITION_MANAGER_BASE=<position_manager_address>
ROUTER_BASE=<router_address>
PERMIT2_BASE=<permit2_address>

# Etherscan/BaseScan API keys (optional; used for verification)
ETHERSCAN_API_KEY=<etherscan_api_key>
BASESCAN_API_KEY=<basescan_api_key>

# Deploy (DO NOT COMMIT real values)
DEPLOYER_PRIVATE_KEY=<private_key_hex>
CREATE2_SALT=<cc0strategy-v1>
